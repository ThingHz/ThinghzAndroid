<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".GenerateReportActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/xls"
        android:scaleType="fitXY"
        android:adjustViewBounds="true">
    </ImageView>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/pb_getDevices" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">
        <TextView
            android:id="@+id/tv_pick_interval_lable"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pick_interval"
            android:textColor="@color/text_color_dark_87"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_pick_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:checkedButton="@id/rb_2_days"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:id="@+id/rb_2_days"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_2_days" />

            <RadioButton
                android:layout_width="wrap_content"
                android:id="@+id/rb_1_week"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_1_week" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rb_1_month"
                android:text="@string/_15_days" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rb_custom"
                android:text="@string/custom_range"/>

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background = "@drawable/layout_background_shape"
            android:id="@+id/ll_custom_time">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_time_start_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="10dp"
                    android:text="@string/pick_start_time_date"
                    android:textColor="@color/text_color_light"
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_pick_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_time_svg"
                        app:tint="@color/icon_color_primary" />
                    <ImageView
                        android:id="@+id/iv_pick_date_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/baseline_calendar_month_24"
                        app:tint="@color/icon_color_primary" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_pick_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_light_87"
                        android:text="@string/hh_mm"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/tv_pick_date_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_light_87"
                        android:text="@string/dd_mm_yyyy"
                        android:gravity="center_horizontal" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_time_end_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="10dp"
                    android:text="Pick End Time/Date"
                    android:textColor="@color/text_color_light"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_pick_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_time_svg"
                        app:tint="@color/icon_color_primary" />
                    <ImageView
                        android:id="@+id/iv_pick_date_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/baseline_calendar_month_24"
                        app:tint="@color/icon_color_primary" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_pick_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_light_87"
                        android:text="@string/hh_mm"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/tv_pick_date_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_light_87"
                        android:text="@string/dd_mm_yyyy"
                        android:gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pick_device_label"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pick_device"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_color_dark_87"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/dd_device_select"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/layout_progress"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_horizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_percent_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/progress" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_progress_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="hello"/>


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_download_report"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/download_report"
        app:icon="@drawable/ic_download_svg"
        android:textColor="@color/text_color_light"
        app:iconTint="@color/icon_color_primary"/>

</LinearLayout>
