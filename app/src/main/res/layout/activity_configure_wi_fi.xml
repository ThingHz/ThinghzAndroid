<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigureWiFiActivity">
    <ProgressBar
        android:id="@+id/progress_bar_wifi"
        style="?android:attr/progressBarStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        android:layout_marginTop="32dp"
        android:visibility="visible"
        android:layout_gravity="center|top"
        android:indeterminateTint="@color/colorPrimary"
        android:indeterminateTintMode="src_atop"
        android:progressTint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/waiting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="16dp"
        android:visibility="visible"
        android:text="@string/waiting"
        android:textAlignment="center"
        android:textColor="@color/text_color_dark_60"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WiFi Manager"
        android:textAlignment="center"
        android:textSize="32sp"
        android:visibility="gone"
        android:textStyle="bold"
        android:id="@+id/text_wifi_manager"
        android:layout_marginBottom="16dp"
        android:textColor="@color/text_color_dark_60"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_wifi_device_id"
        android:layout_height="wrap_content"
        android:text="@string/device_id"
        android:textAlignment="center"
        android:textColor="@color/text_color_dark_87"
        android:textSize="20sp"
        android:visibility="gone"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_text_wifi_ssid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ssid"
        android:layout_margin="16dp"
        android:inputType="text"
        android:textColorHint="@color/text_color_dark_87"
        android:theme="@style/myTextInputLabelAdd"
        app:boxBackgroundColor="@color/icon_color_primary"
        app:boxStrokeColor="@color/colorPrimary"
        app:endIconTint="@color/colorPrimary"
        android:visibility="gone"
        app:hintAnimationEnabled="true"
        app:hintTextColor="@color/text_color_dark_87"
        app:startIconDrawable="@drawable/ic_wifi_svg"
        app:startIconTint="@color/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/edit_text_wifi_ssid"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:visibility="gone"
            android:textColor="@color/text_color_dark_87" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_text_wifi_pass_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/wifi_pass"
        android:layout_margin="16dp"
        android:inputType="text"
        android:textColorHint="@color/text_color_dark_87"
        android:theme="@style/myTextInputLabelAdd"
        app:boxBackgroundColor="@color/icon_color_primary"
        app:boxStrokeColor="@color/colorPrimary"
        app:endIconTint="@color/colorPrimary"
        app:hintAnimationEnabled="true"
        android:visibility="gone"
        app:hintTextColor="@color/text_color_dark_87"
        app:startIconDrawable="@drawable/ic_wifi_svg"
        app:startIconTint="@color/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/edit_text_wifi_pass"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:visibility="gone"
            android:textColor="@color/text_color_dark_87" />
    </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_wif_configure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/configure"
            android:textColor="@color/text_color_light"
            android:elevation="5dp"
            android:layout_gravity="center"
            app:rippleColor="@color/text_color_light" />

        <ProgressBar
            android:id="@+id/progress_bar_cred"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            android:layout_gravity="center|top"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_atop"
            android:progressTint="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/shape_wifi_config"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight = "60dp">
        <View
            android:layout_width="100dp"
            android:layout_marginTop="2dp"
            android:background="@color/text_color_dark_40"
            android:layout_height="4dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:text="@string/set_up_wifi_cred"
            android:textAlignment="inherit"
            android:textColor="@color/text_color_dark_87"
            android:textSize="16sp" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
